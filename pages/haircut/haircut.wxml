  <!-- 信息 -->
  <view class="ha_info">
    <van-cell-group>
      <van-field
        value="{{ username }}"
        clearable
        label="姓名"
        placeholder="请输入姓名"
        readonly="{{ readonly }}"
        maxlength="{{4}}"
      />

      <van-field
        value="{{ phone }}"
        clearable
        label="手机号"
        placeholder="请输入手机号"
        readonly="{{ readonly }}"
        maxlength='{{11}}'
        border="{{ false }}"
      />
    </van-cell-group>
  </view>

  <!-- time -->
  <view class="ha_time">
    <view class="time_h2">选择预约时间</view>
    <view class="time_box">
      <view class="box_li">今天</view>
      <view class="box_li">明天</view>
    </view>
  </view>
  <!-- 项目 -->
  <view class="ha_pro">
    <view class="pro_h2">选择项目</view>
    <view class="pro_ul">
      <text class="{{ pro_act?'active':''}}">理发</text>
      <text class="{{ !pro_act?'active':''}}">染发</text>
    </view>
  </view>
</view>
