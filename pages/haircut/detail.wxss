/* pages/haircut/detail.wxss */
page {
  background-color: #f1f2f3;
}
.ld_top {
  background-color: #fff;
  margin-bottom: 30rpx;
  padding: 20rpx 0 20rpx 30rpx;
  display: flex;
  align-items: center;
}
.ld_top image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.ld_info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 94rpx;
}
.ld_info .ld_name {
  font-size: 32rpx;
}
.ld_info .ld_tip {
  font-size: 24rpx;
}
.select_time {
  background-color: #fff;
  width: 100vw;
  /* margin-left: -20rpx; */
  padding: 30rpx;
  margin-bottom: 40rpx;
}
.time_h2 {
  font-size: 34rpx;
  font-family: Source Han Sans CN;
  font-weight: 500;
  color: #333333;
  margin-bottom: 20rpx;
}
.scroll {
  width: 100%;
  display: flex;
  align-items: baseline;
  margin-bottom: 20rpx;
}
.ti_li {
  flex-shrink: 0;
  padding: 20rpx;
  font-size: 26rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #3E3E3E;
  border: 1rpx solid #DCDCDC;
  margin-right: 24rpx;
  border-radius: 8rpx;
}
.ti_li text {
  display: block;
  text-align: center;
  margin-bottom: 10rpx;
}
.ti_li text:first-child {
  font-size: 30rpx;
  font-weight: 500;
}
.ti_li.active {
  color: #2963E0;
  border: 1rpx solid #2963E0;
}

.ti_btn {
  width: 600rpx;
  position: fixed;
  bottom: 50rpx;
  left: 75rpx;
  background-color: #2963E0;
  color: #fff;
  font-size: 32rpx;
  border-radius: 50rpx;
  text-align: center;
  padding: 20rpx 0;
}

.time_h2 {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}
.sele_time {
  width: 100%;
  display: flex;
  align-items: baseline;
}
.time_li {
  border: 1rpx solid #333;
  border-radius: 8rpx;
  padding: 12rpx 20rpx;
  flex-shrink: 0;
  margin-right: 20rpx;
  font-size: 26rpx;
}
.activeTime {
  border-color: #2963E0;
  color: #2963E0;
}
.ha_pro {
  margin-top: 20rpx;
  border-radius: 12rpx;
  background-color: #fff;
  padding: 30rpx;
  display: flex;
  align-items: center;
}
.pro_ul {
  display: flex;
  align-items: center;
}
.ha_pro .pro_h2 {
  font-size: 30rpx;
  margin-right: 50rpx;
}
.pro_ul text {
  border-radius: 26rpx;
  padding: 8rpx 26rpx;
  border: 1rpx solid #F1F1F1;
  margin-right: 30rpx;
  font-size: 24rpx;
}
.pro_ul .active {
  background-color: #2963E0;
  color: #fff;
}

.tc_btn {
  padding: 18rpx 0;
  width: 650rpx;
  margin: 0 auto;
  text-align: center;
  background-color: #2963E0;
  color: #fff;
  border-radius: 50rpx;
  font-size: 30rpx;
  position: absolute;
  bottom: 100rpx;
  left: 40rpx;
}