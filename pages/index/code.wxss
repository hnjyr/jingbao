/* pages/index/code.wxss */
page {
  background-color: #f1f2f3;
  padding-top: 50rpx;
}
.ref {
  color: #666;
  text-align: center;
  margin-bottom: 50rpx;
  font-size: 28rpx;
}
.tip {
  color: #333;
  line-height: 50rpx;
  font-size: 28rpx;
  padding-left: 20rpx;
}
image {
  width: 600rpx;
  height: 600rpx;
  display: block;
  margin: 0 auto 20rpx;
}


.wx-page-content .page-title {
  font-size: 34rpx;
  color: #000;
  font-weight: 500;
  margin-bottom: 30rpx;
}
.wx-page-content .page-tises {
  font-size: 26rpx;
  color: #000;
}
.wx-page-content .page-tises span {
  color: #ACACAC;
}
.verificationCode {
  overflow: hidden;
  position: relative;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top: 20rpx;
  padding: 20rpx 40rpx;
}
.verificationCode > input {
  width: calc(200%);
  position: absolute;
  left: -50rpx;
  top: 20rpx;
  height: 60rpx;
  background: #e9e9e9;
  opacity: 0;
  font-size: 10rpx;
}
.verificationCode > view {
  width: 75rpx;
  border: 1rpx solid #979797;
  height:80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #3D73EF;
  margin-left: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.verificationCode .activeView {
  border-color: #3D73EF!important;
  position: relative;
}
.activeView::after {
  content: "";
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  background-color: #000;
  border-radius: 50%;
  left: 50%;
  top: 50%;
  margin-left: -15rpx;
  margin-top: -15rpx;
}
.lodingBtn {
  width: 100%;
  height: 50rpx;
  margin-top: 20rpx;
  background: #4171e0;
  border-radius: 99rpx;
  text-align: center;
  line-height: 50rpx;
  color: #fff;
  font-size: 16rpx;
}
.trueLoding {
  background: #3D73EF;
}
.againTime,
.againTimeBtn {
  color: #ACACAC;
  font-size: 12rpx;
  text-align: center;
  margin-top: 15rpx;
  text-decoration: underline;
}
.againTimeBtn {
  color: #59ACFF;
}

.yuan{
  display: block;
  width: 30rpx;
  height: 30rpx;
  border-radius: 15rpx;
  background-color: #242424;
}
.key_bord {
  display: flex;
  align-items: center;
  width: 100%;
  flex-wrap: wrap;
  text-align: center;
  position: absolute;
  left: 0;
  bottom: 0;
}
.key_bord .key_j {
  width: 33.3%;
  flex-shrink: 0;
  font-size: 40rpx;
  font-weight: 500;
  border-top: 1rpx solid #ccc;
  border-right: 1rpx solid #ccc;
  line-height: 100rpx;
}
.key_bord .key_j:nth-child(3n) {
  border-right: none;
}
.key_bord .key_j.hui {
  background-color: #ccc;
}
.canvas_box{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 600rpx;
  height: 600rpx;
  padding: 20rpx;
  background-color: #fff;
  margin: 0 auto;
}
.lingshi_box{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.lingshi{
  color: #DB2016;
  font-size: 30rpx;
  margin-top: 25rpx;
}