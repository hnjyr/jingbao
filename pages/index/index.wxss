/**index.wxss**/
page {
  background-color: #F0F1F2;
}
.img_box {
  width: 100%;
  height: 312rpx;
}
.img_box image {
  width: 100%;
  height: 100%;
  /* background-color: #ccc; */
}
.pub_bgc {
  padding: 10px;
}
.list_ul {
  background-color: #fff;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  width: 100%;
  border-radius: 8rpx;
  padding: 15rpx;
}
.list_ul .list_li {
  text-align: center;
  width: 25%;
  padding:15rpx 0;
}
.list_ul .list_li text {
  font-size: 26rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #666666;
}
.list_ul .list_li image {
  display: block;
  margin: 0 auto;
  width: 67rpx;
  height: 67rpx;
  margin-bottom: 8rpx;
  /* background-color: #ccc; */
}
.announcement {
  padding: 16rpx 20rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
}
.ann_left {
  padding-right: 24rpx;
  margin-right: 24rpx;
  position: relative;
}
.ann_left::after {
  content: '';
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 2rpx;
  height: 28rpx;
  background-color: #E5E5E5;
}
.ann_left image {
  width: 20rpx;
  height: 20rpx;
  margin-right: 20rpx;
  /* background-color: #ccc; */
}
.ann_left text {
  font-size: 26rpx;
  font-family: Source Han Sans CN;
  font-weight: bold;
  color: #1B1B1B;
}
.ann_right {
  font-size: 26rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #666666;
}
.record .list_li {
  width: 20%;
}
.record .list_li text {
  font-weight: 400;
  color: #333333;
}
.declare {
  padding-top: 0;
}
.declare .list_ul {
  padding: 5rpx 0;
}
.declare .list_li {
  width: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.declare .list_li image {
  margin: 0;
  margin-right: 14rpx;
}
.tab_box {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  display: flex;
  justify-content: space-around;
  padding-bottom: calc(env(safe-area-inset-bottom) / 2);
}
.tab_box .tab_li {
  padding: 10rpx 50rpx;
}
.tab_box .tab_li image {
  width: 37rpx;
  height:43rpx;
  display: block;
  margin: 0 auto 6rpx;
}
.tab_box .tab_li view {
  font-size: 24rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #9A9A9A;
}
.tab_box .code {
  width: 84rpx;
  height: 84rpx;
  position: absolute;
  top: -42rpx;
  left: 50%;
  margin-left: -42rpx;
}
.code image {
  width: 100%;
  height: 100%;
}
.swiper {
  width: 80%;
  height: 70rpx;
}
swiper-item {
  display: flex;
  align-items: center;
}