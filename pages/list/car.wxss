/* pages/list/car.wxss */
.cart_body{
  box-sizing: border-box;
  padding: 0;
}
.cart_item{
  box-sizing: border-box;
  padding-bottom: 100rpx;
}
.check_img{
  width: 40rpx;
  height: 40rpx;
  margin-top: 48rpx;
}

label{
  display: flex;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #DCDCDC;
}
.cart_image{
  width: 152rpx;
  height: 134rpx;
  margin-left: 32rpx;
}
.cart_img{
  width: 100%;
  height: 100%;
  border-radius: 8rpx;

}
.cart_content{
  margin-left: 20rpx;
  flex:1;
  display: flex;
  flex-flow: column wrap;
  justify-content: space-around;
}
.content_title{
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp:2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 32rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #070707;
}
.content_kc {
  font-size: 24rpx;
}
.content_price{
  display: flex;
  justify-content: space-between;
}
.fc_price {
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #E51B1B;
}
.goods_number {
  font-size: 30rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #AFAFAC;
}
.goods_number_container{
  width: 170rpx;
  display: flex;
  justify-content: space-between;
}
.goods_number_icon_container{
  width: 40rpx;
  height:40rpx;
}
.goods_number_icon{
  width:100%;
  height:100%;
}
.goods_number{
  flex:1;
  text-align: center;
}
.cart_total_container{
  height: 100rpx;
  line-height: 100rpx;
  background: #f5f5f5;
  position: fixed;
  bottom:0;
  left:0;
  right:0;
  box-sizing: border-box;
  padding: 0 0 0 32rpx;
  display: flex;
}
.checkAllBox{
  border-radius: 50%;
  height: 40rpx;
  width: 40rpx;
  margin-top: 30rpx;
  margin-right: 8rpx;
}
.totalPrice{
  flex:1;
  margin-left: 40rpx;
  text-align: center;
  color: #E51B1B;
}

.btn{
  width: 200rpx;
  text-align: center;
  line-height: 100rpx;
}
.editbtn{
  border: 1px solid #666666;
  background: #fff;
}
.clearbtn{
  background: #D8D8D8;
  color: #fff;
}

.selects {
  background-color: #FF8400;
}
.whiteView {
  color: transparent;
}