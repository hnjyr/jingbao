<!--pages/admin/modifyuser.wxml-->
<view class="container">
	<image src="{{src}}" class="avaimg" bindtap="uploadimg"></image>
	<view class="iptbox">
		<view class="it">
			<text space="ensp">账号* </text>
			<input disabled placeholder="{{name}}" value="{{name}}" bindinput="nameInput" type="text"></input>
		</view>
		<view class="it">
			<text space="ensp">姓名  </text>
			<input class="{{!flag?'black':''}}" focus='{{!flag}}' disabled="{{flag}}" placeholder="{{username}}" value="{{username}}" bindinput="usernameInput" type="text"></input>
		</view>
		<view class="it">
			<text>手机号</text>
			<input class="{{!flag?'black':''}}" disabled="{{flag}}" maxlength="11" placeholder="{{phone}}" bindinput="phoneInput" value="{{phone}}" type="number"></input>
		</view>
		<view class="it">
			<text space="ensp">邮箱  </text>
			<input class="{{!flag?'black':''}}" disabled="{{flag}}"  placeholder="{{emailt}}" value="{{emailt}}" bindinput="emailInput" type="email"></input>
		</view>
	</view>
  <view wx:if='{{flag}}' class="btn" bindtap="btn">编辑</view>
	<view wx:else class="btns">
		<view bindtap="close" class="close">取消</view>
		<view bindtap="ok" class="ok">确定</view>
	</view>
</view>