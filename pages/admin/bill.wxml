<!--pages/admin/bill.wxml-->
<view class="container">
	<scroll-view class="center_box" scroll-y="true" refresher-enabled='true' refresher-triggered='{{refresh}}' bindscrolltolower='bottom' bindrefresherrefresh='refreshTap'>
		<view class="it" wx:for='{{list}}' wx:key='*this'>
			<view class="it" style="border:none;padding:0;">
				<image src="/images/banner.png" style="width:40rpx;height:60rpx;margin-right:30rpx;"></image>
				<view>
					<view style="font-size:30rpx;color:#999;margin-top:-20rpx;">{{item.body}}</view>
				</view>
			</view>
			<text>{{item.isRecharge==1?'+':'-'}}{{item.amount}}</text>
		</view>
		<van-divider contentPosition="center" customStyle="font-size: 30rpx;margin:10rpx;">{{text}}</van-divider>
	</scroll-view>
</view>