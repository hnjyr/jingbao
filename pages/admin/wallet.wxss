/* pages/admin/wallet.wxss */
page{
  background-color: #F1F0F5;
}
.top{
  padding: 50rpx 130rpx  90rpx 130rpx;
  text-align: center;
  background-color: #3D73EF;
  color: #fff;
  margin-bottom:10rpx;
}
.box{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.box>navigator{
  display: inline-block;
  padding: 10rpx 80rpx;
  border: 1rpx solid #fff;
  font-size: 24rpx;
  color: #fff;
  border-radius: 25rpx;
}
.bottom{
  padding: 0 30rpx;
  background-color: #fff;
}
.it{
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #D7D7D7;
  padding: 20rpx 10rpx;
  font-size: 28rpx;
  font-weight: 500;
}
.left{
  display: flex;
  justify-content: space-between;
  align-items: center;
}

view {
  box-sizing: border-box;
  padding: 0;
  margin: 0;
}
.wx-page-content {
  /* padding: 40rpx; */
}
.wx-page-content .page-title {
  font-size: 34rpx;
  color: #000;
  font-weight: 500;
  margin-bottom: 30rpx;
}
.wx-page-content .page-tises {
  font-size: 26rpx;
  color: #000;
}
.wx-page-content .page-tises span {
  color: #ACACAC;
}
.verificationCode {
  overflow: hidden;
  position: relative;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top: 20rpx;
  padding: 20rpx 40rpx;
}
.verificationCode > input {
  width: calc(200%);
  position: absolute;
  left: -50rpx;
  top: 20rpx;
  height: 90rpx;
  background: #e9e9e9;
  opacity: 0;
  font-size: 10rpx;
}
.verificationCode > view {
  width: 75rpx;
  border: 1rpx solid #979797;
  height:80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #3D73EF;
  margin-left: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.verificationCode .activeView {
  border-color: #3D73EF!important;
}

.lodingBtn {
  width: 100%;
  height: 50rpx;
  margin-top: 20rpx;
  background: #4171e0;
  border-radius: 99rpx;
  text-align: center;
  line-height: 50rpx;
  color: #fff;
  font-size: 16rpx;
}
.trueLoding {
  background: #3D73EF;
}
.againTime,
.againTimeBtn {
  color: #ACACAC;
  font-size: 12rpx;
  text-align: center;
  margin-top: 15rpx;
  text-decoration: underline;
}
.againTimeBtn {
  color: #59ACFF;
}
.yuan{
  display: block;
  width: 30rpx;
  height: 30rpx;
  border-radius: 15rpx;
  background-color: #242424;
}
