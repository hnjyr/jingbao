/* pages/admin/modifyuser.wxss */
page{
  background-color: #F1F0F5;
}
.container{
  margin: 0 50rpx;
  text-align: center;
}

.avaimg{
  width: 260rpx;
  height: 260rpx;
  background:#999;
  border-radius: 50%;
  text-align: center;
  margin: 50rpx 0;
}
.iptbox{

}
.it{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  color: #3A3A3A;
  font-weight: 500;
  margin-bottom: 20rpx;
}
.it>input{
  box-sizing: border-box;
  flex: 1;
  height: 60rpx;
  background-color: #fff;
  border-radius: 10rpx;
  margin-left: 50rpx;
  text-align: left;
  color: #B8B8B8;
  padding:0 20rpx;
  line-height: 60rpx;
  border: 1rpx solid #DEDEDE;
}

.btn{
  color:#fff;
  background-color: #3C73F1;
  height: 90rpx;
  line-height: 90rpx;
  border-radius:45rpx;
  font-size: 30rpx;
  margin-top: 150rpx;
  text-align: center;
  border: 1rpx solid #fff;
  box-shadow: 2rpx 5rpx 10rpx #C4C6C3;
}
.btns{
  margin-top: 150rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.btns>view{
  color:#fff;
  background-color: #3C73F1;
  padding: 15rpx 80rpx;
  text-align: center;
  border-radius:45rpx;
  border: 1rpx solid #fff;
  box-shadow: 2rpx 5rpx 10rpx #C4C6C3;
}
.close{
  background-color: #999!important;
  border: 0;
}
.black{
  color: #000!important;
}