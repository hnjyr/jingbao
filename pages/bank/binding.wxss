/* pages/bank/binding.wxss */
.container {
  width: 100%;
  padding: 0 32rpx;
}

.bankcard {
  width: 100%;
  padding: 26rpx 0;
  display: flex;
  justify-content: space-between;
  color: #333;
  font-size: 28rpx;
  border-bottom: 2rpx solid #eee;
}
.bankcard .cardnum{
  color: #2963E0;
  margin-left: 32rpx;
}
.money {
  margin-top: 24rpx;
  color: #333;
  font-size: 28rpx;
}

.money .money_ipt {
  margin-top: 24rpx;
  color: #333;
  font-size: 42rpx;
  border-bottom: 2rpx solid #ccc;
}

.money .money_num {
  margin-top: 10rpx;
  color: #999;
}

.mobile {
  margin-top: 24rpx;
  color: #333;
  font-size: 28rpx;
}

.mobile text:nth-child(2) {
  color: #2963E0;
  margin-left: 12rpx;
}

.code {
  margin-top: 24rpx;
  color: #333;
  font-size: 28rpx;
}

.code input {
  width: 140rpx;
  padding: 0 12rpx;
  border-bottom: 1rpx solid #333;
}

.getCode {
  padding: 12rpx 42rpx;
  background-color: #2963E0;
  border-radius: 32rpx;
  color: #fff;
  margin-left: 24rpx;
}

.btn {
  width: 100%;
  height: 68rpx;
  margin-top: 68rpx;
  border-radius: 44rpx;
  text-align: center;
  line-height: 68rpx;
  color: #fff;
  font-size: 26rpx;
  background-color: #2963E0;
}

.popup {
  width: 100%;
}

.add_bankcard {
  position: relative;
  width: 700rpx;
  background-color: #fff;
  padding: 32rpx 24rpx 24rpx;
}

.add_bankcard .bank_title {
  width: 30%;
  margin: auto;
  text-align: center;
  color: #333;
  font-size: 28rpx;
  margin-bottom: 32rpx;
}

.form .form_item{
  color: #333;
  font-size: 24rpx;
  margin-bottom: 12rpx;
}
.form_item input{
  flex: 1;
  height: 58rpx;
  padding-left: 24rpx;
  margin-left: 24rpx;
  border: 1rpx solid #999;
  box-shadow: 0px 2px 10px 0px rgba(51,51,51,0.1);
}

.goback{
  position: absolute;
}

.choose_bank{
  width: 600rpx;
  border-radius: 8rpx;
  padding: 32rpx;
}
.choose_bank .banklist{
  margin-top: 32rpx;
}
.banklist .bank_item{
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  color: #333;
  margin-bottom: 24rpx;
}
.add_new{
  margin-top: 32rpx;
  font-size: 24rpx;
}