/* pages/order/order.wxss */
page {
  padding: 30rpx;
  background-color: #f1f2f3;
}
.order_box {
  background-color: #fff;
  border-radius: 20rpx;
  border: 1rpx solid #ddd;
  padding: 16rpx;
  margin-bottom: 20rpx;
}
.box_top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}
.box_h1 {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}
.box_zf {
  font-size: 28rpx;
  color: red;
}
.box_time {
  font-size: 24rpx;
  color: #bbb;
  margin-bottom: 10rpx;
}
.box_info {
  font-size: 28rpx;
  color: #bbb;
}
.order_num {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}
.order_price {
  font-size: 30rpx;
  color: #333;
}
.price {
  color: #FF8400;
  font-size: 28rpx;
  margin-right: 10rpx;
}
.yh {
  font-size: 24rpx;
  color: #aaa;
}
.zf_box {
  position: fixed;
  bottom: 50rpx;
  left: 30rpx;
  width: 690rpx;
}
.zf_price {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
}
.zf_price text {
  font-size: 32rpx;
  font-weight: 500;
  color: red;
}
.ti_btn {
  width: 100%;
  background-color: #2963E0;
  color: #fff;
  font-size: 32rpx;
  border-radius: 50rpx;
  text-align: center;
  padding: 20rpx 0;
}

.wx-page-content .page-title {
  font-size: 34rpx;
  color: #000;
  font-weight: 500;
  margin-bottom: 30rpx;
}
.wx-page-content .page-tises {
  font-size: 26rpx;
  color: #000;
}
.wx-page-content .page-tises span {
  color: #ACACAC;
}
.verificationCode {
  overflow: hidden;
  position: relative;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top: 20rpx;
  padding: 20rpx 40rpx;
}
.verificationCode > input {
  width: calc(200%);
  position: absolute;
  left: -50rpx;
  top: 20rpx;
  height: 60rpx;
  background: #e9e9e9;
  opacity: 0;
  font-size: 10rpx;
}
.verificationCode > view {
  width: 75rpx;
  border: 1rpx solid #979797;
  height:80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #3D73EF;
  margin-left: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.verificationCode .activeView {
  border-color: #3D73EF!important;
  position: relative;
}
.activeView::after {
  content: "";
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  background-color: #000;
  border-radius: 50%;
  left: 50%;
  top: 50%;
  margin-left: -15rpx;
  margin-top: -15rpx;
}
.lodingBtn {
  width: 100%;
  height: 50rpx;
  margin-top: 20rpx;
  background: #4171e0;
  border-radius: 99rpx;
  text-align: center;
  line-height: 50rpx;
  color: #fff;
  font-size: 16rpx;
}
.trueLoding {
  background: #3D73EF;
}
.againTime,
.againTimeBtn {
  color: #ACACAC;
  font-size: 12rpx;
  text-align: center;
  margin-top: 15rpx;
  text-decoration: underline;
}
.againTimeBtn {
  color: #59ACFF;
}

.yuan{
  display: block;
  width: 30rpx;
  height: 30rpx;
  border-radius: 15rpx;
  background-color: #242424;
}
.key_bord {
  display: flex;
  align-items: center;
  width: 100%;
  flex-wrap: wrap;
  text-align: center;
  position: absolute;
  left: 0;
  bottom: 0;
}
.key_bord .key_j {
  width: 33.3%;
  flex-shrink: 0;
  font-size: 40rpx;
  font-weight: 500;
  border-top: 1rpx solid #ccc;
  border-right: 1rpx solid #ccc;
  line-height: 100rpx;
}
.key_bord .key_j:nth-child(3n) {
  border-right: none;
}
.key_bord .key_j.hui {
  background-color: #ccc;
}