}
.center_box{
  height: 100vh;
}
.c_it{
  padding: 20rpx;
}

.c_right{
  flex: 1;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.c_right_oneline{ 
  font-size: 30rpx;
  font-family: Source Han Sans CN;
